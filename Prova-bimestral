// Example program
#include <iostream>
#include <string>
using namespace std;


int main()
{
 string nome;
 int idade;
 
 cout<<"Qual o seu nome ? ";
 cin >> nome;
 
 cout<<"Qual a sua idade ?";
 cin>>idade;
 
 cout<<"Entao seu nome e "<< nome <<" e sua idade e " << idade<< endl;
 
 
}

