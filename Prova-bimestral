// Example program
#include <iostream>
#include <string>
using namespace std;

int soma(int a, int b){
    return a + b;

}

int main()
{
    int x=5;
    int y=7;
 
    int resultado= soma(x,y);
    
    cout<<"A soma de 5 e 7 e: "<<resultado<<endl;
 
}

7-
// Example program
#include <iostream>
#include <string>
using namespace std;

bool ehPar(int a){
    return a % 2 == 0;
}

int main(){
    int valor;
    
   cout<<"Digite um numero inteiro: ";
   cin>>valor;
   
    if (ehPar(valor)){
       cout<<valor<<" e par";
    } else{
        cout<<valor<<" e impar"<<endl;

    }

}
