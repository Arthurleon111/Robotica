15-
#include <iostream>
using namespace std;


void nota(double* a){
    if(*a>=7){
        
        cout<<"Aprovado"<<endl;
        
        }else{
        cout<<"reprovado"<<endl;
        
        }
    
    
    }

int main() {
  double x;
  
    cout<<"digite a nota: ";
  cin>>x;

  if(x<0 || x>10){
      cout<<"Valor invalido, tente um numero de 1 a 10"<<endl;
      
      }else{
          nota(&x);
        }
    
  
  
}

